<Window x:Class="SkinPackGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinPackGenerator"
        mc:Ignorable="d"
        Title="SkinPack Generator"
        Background="#1E1E1E"
        MinWidth="700"
        MinHeight="450"
        ResizeMode="CanResize">

    <Grid Margin="10">

        
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        
        
        <Border Grid.Row="0" Grid.ColumnSpan="2"
        CornerRadius="15"
        Background="#2E2E2E"
        BorderBrush="#555"
        BorderThickness="1"
        ClipToBounds="True"
        Height="Auto">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                
                <TextBox Name="FilePathTextBox"
                 Grid.Column="0"
                 Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 Padding="10"
                 FontSize="14"
                 Text="Select a Folder"/>

                
                <Button x:Name="DirSelectButton" Grid.Column="1"
        Background="Transparent"
        BorderBrush="Transparent"
                        Click="SelectFolder_Click"
        Padding="0">

                    <Border Background="#555"
            CornerRadius="0,15,15,0"
            Padding="10,10">
                        <TextBlock Text="参照"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
                    </Border>
                </Button>

            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    CornerRadius="15"
                    Background="#2E2E2E"
                    BorderBrush="#555"
                    BorderThickness="1"
                    Height="Auto"
                    Margin="0,0,10,0">

                <TextBox Name="SearchTextBox"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="10"
                         FontSize="14"
                         Text="Search..."/>
            </Border>

            <Border Grid.Column="1"
                    CornerRadius="15"
                    Background="#2E2E2E"
                    BorderBrush="#555"
                    BorderThickness="1"
                    Height="35"
                    Padding="10"
                    Margin="0,0,10,0">

                <CheckBox Name="NoArmorCheckBox"
                          Content="NoArmorSkin?"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Column="2"
                    CornerRadius="15"
                    Background="#2E2E2E"
                    BorderBrush="#555"
                    BorderThickness="1"
                    Height="Auto">

                <TextBox Name="AnimSearchTextBox"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="10"
                         FontSize="14"
                         Text="Search..."/>
            </Border>

        </Grid>

        <Border Grid.Row="2" Grid.Column="0"
                Margin="0,10,5,0"
                CornerRadius="15"
                Background="#2A2A2A"
                BorderBrush="#555"
                BorderThickness="1"
                ClipToBounds="True">

            <ListBox Name="SkinListBox"
         Background="Transparent"
         Foreground="White"
         Margin="5"
         BorderThickness="0"
         SelectionMode="Multiple"
         PreviewMouseDoubleClick="SkinListBox_MouseDoubleClick">


                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Margin="2">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          Margin="10,5"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd"
                                                    Property="Background"
                                                    Value="#22FFFFFF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd"
                                                    Property="Background"
                                                    Value="#55FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FileName}"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        
        
        
        <Border Grid.Row="2" Grid.Column="1"
                Margin="5,10,0,0"
                CornerRadius="15"
                Background="#2A2A2A"
                BorderBrush="#555"
                BorderThickness="1"
                ClipToBounds="True">

            <ListBox Name="ConfigListBox"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding KeyName}"
                                       VerticalAlignment="Center"
                                       Foreground="#BBB"
                                       FontSize="12"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding KeyName}"/>

                            <ComboBox Grid.Column="1"
                                      IsEditable="True"
                                      Height="25"
                                      Text="{Binding SelectedValue,
                                      UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="default"/>
                                <ComboBoxItem Content="custom"/>
                            </ComboBox>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

            </ListBox>
        </Border>

        
        
        
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
            Margin="0,10,5,0"
            CornerRadius="15"
            Background="#2E2E2E"
            BorderBrush="#555"
            BorderThickness="1"
            Height="45">

                <TextBox Name="PackNameTextBox"
                 Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 Padding="10"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 Text="PackName"/>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,10,10,0">
                <TextBlock Text="Steve" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                <CheckBox x:Name="ModelTypeToggle" Cursor="Hand">
                    <CheckBox.Template>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid>
                                <Border x:Name="Background" Width="45" Height="22" Background="#444" CornerRadius="11" />
                                <Ellipse x:Name="Dot" Width="16" Height="16" Fill="White" HorizontalAlignment="Left" Margin="3,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0" />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Background" Property="Background" Value="#00CED1" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="Dot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="23" Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="Dot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
                <TextBlock Text="Alex" Foreground="White" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="12"/>
            </StackPanel>

            <Button Grid.Column="2"
            Name="GenerateButton"
            Click="GenerateButton_Click"
            Content="Generate Skinpack"
            Width="160"
            Height="45"
            Margin="5,10,0,0"
            HorizontalAlignment="Right"
            Background="#00CED1"
            Foreground="White"
            BorderBrush="Transparent"
            FontWeight="Bold"
            Cursor="Hand">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20B2AA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#009999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

    </Grid>
</Window>
